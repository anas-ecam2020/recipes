{% extends "base.html.twig" %}

{% block title %} {{ recipe.title }}
{% endblock %}


{% block body %}

	<br>
	<article>
		<h3>{{ recipe.title }}</h3>
		<div class="metadata">Ecrit le
			{{recipe.createdAt | date('d/m/Y') }}
			à
			{{recipe.createdAt | date('H:i') }}</div>
		<div class="content">
			<img src="{{ recipe.image }}" width="350" length="150" alt=""><br><br>
		</div>
        <div>
            {{ recipe.content }}
        </div>
        <br>
		<div>
			<p>Difficulté :
				{{ recipe.difficulty }}</p>
		</div>
		<div>
			<p>Portions :
				{{ recipe.portions }}</p>
		</div>
        		<div>
			<p>Temps de préparation :
				{{ recipe.portions }} minutes</p>
		</div>
	</article>
	<br>

{% endblock %}

