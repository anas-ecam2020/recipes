{% extends "base.html.twig" %}


{% block title %}
	Catégorie :
	{{ category.title }}
{% endblock %}


{% block body %}
	<br>
	<h1>Catégorie :
		{{ category.title }}</h1>
	<br>
	{% for recipe in  category.getRecipes() %}
		<article>
			<h3>{{ recipe.title }}</h3>
			<div class="metadata">Ecrit le
				{{recipe.createdAt | date('d/m/Y') }}
				à
				{{recipe.createdAt | date('H:i') }}</div>
			<br>
			<div class="content">
				<img src="{{ recipe.image }}" width="350" length="150" alt=""><br><br>
				<a href="{{ path('recipe_show', {'id':recipe.id}) }}" class="btn btn-primary">Consulter la recette</a>
			</div>
		</article>
		<br>
	{% endfor %}
{% endblock %}
